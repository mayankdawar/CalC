<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:hint="Enter Values"
        android:gravity="bottom"
        android:textAlignment="textEnd"
        tools:ignore="RtlCompat"
        android:textSize="50sp"

        android:id="@+id/val"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:background="@color/mainback">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.25"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="7"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/seven"
                    android:textColor="@color/ncolor" />
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="8"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/eight"
                    android:textColor="@color/ncolor"/>
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="9"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/nine"
                    android:textColor="@color/ncolor"/>

            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.25"
                >
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="4"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/four"
                    android:textColor="@color/ncolor"/>
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="5"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/five"
                    android:textColor="@color/ncolor"/>
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="6"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/six"
                    android:textColor="@color/ncolor"/>

            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.25"
                >
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="1"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/one"
                    android:textColor="@color/ncolor"/>
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="2"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/two"
                    android:textColor="@color/ncolor"/>
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="3"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/three"
                    android:textColor="@color/ncolor"/>

            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.25"
                >
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="0"
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/zero"
                    android:textColor="@color/ncolor"/>
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="."
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/dot"
                    android:textColor="@color/ncolor"/>
                <Button
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:background="@color/bback"
                    android:text="="
                    android:textSize="@dimen/nsize"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/maxn"
                    android:autoSizeMinTextSize="@dimen/minn"
                    android:id="@+id/equal"
                    android:textColor="@color/scolor"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                android:background="@color/bback"
                android:text="c"
                android:textSize="@dimen/nsize"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/maxn"
                android:autoSizeMinTextSize="@dimen/minn"
                android:id="@+id/clear"
                android:textColor="@color/scolor"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                android:background="@color/bback"
                android:text="÷"
                android:textSize="@dimen/nsize"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/maxn"
                android:autoSizeMinTextSize="@dimen/minn"
                android:id="@+id/div"
                android:textColor="@color/scolor"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                android:text="×"
                android:textSize="@dimen/nsize"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/maxn"
                android:autoSizeMinTextSize="@dimen/minn"
                android:id="@+id/mul"
                android:background="@color/bback"
                android:textColor="@color/scolor"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                android:text="-"
                android:textSize="@dimen/nsize"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/maxn"
                android:autoSizeMinTextSize="@dimen/minn"
                android:id="@+id/sub"
                android:background="@color/bback"
                android:textColor="@color/scolor"/>
            
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                android:text="+"
                android:textSize="@dimen/nsize"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/maxn"
                android:autoSizeMinTextSize="@dimen/minn"
                android:id="@+id/add"
                android:background="@color/bback"
                android:textColor="@color/scolor"/>
        </LinearLayout>
        
    </LinearLayout>
    
    

</LinearLayout>